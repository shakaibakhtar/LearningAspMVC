@{
    ViewBag.Title = "Register";
}

<h2>Register</h2>
<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <form id="registerForm" action="/Account/Register" method="post">
                <div class="form-group">
                    <label>Name</label>
                    <input type="text" name="txtName" id="txtName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" name="txtEmail" id="txtEmail" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input type="text" name="txtPassword" id="txtPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Confirm Password</label>
                    <input type="text" name="txtConfirmPassword" id="txtConfirmPassword" class="form-control" />
                </div>
                <input type="submit" class="btn btn-success" name="btnSubmit" id="btnSubmit" />
            </form>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/bootstrap")
<script>
    $(document).ready(function () {
        $('#registerForm').validate({
            rules: {
                txtName: {
                    required: true,
                    minlength: 3,
                },
                txtEmail: {
                    required: true,
                    email: true,
                },
                txtPassword: {
                    required: true,
                    minlength: 8,
                },
                txtConfirmPassword: {
                    required: true,
                    equalTo: "#txtPassword"
                }
            }
        });
    });
</script>