@model Learning.ViewModel.ItemViewModel

@{
    ViewBag.Title = "Create";
}

<h3>Create Item</h3>
<form id="form" action="/Item/Create" method="post">
    <div class="form-group">
        <input type="text" class="form-control" id="txtItemName" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Save" />
    </div>
</form>

<script>
    $('#form').on('submit', function (e) {
        e.preventDefault();
        var name = $('#txtItemName').val();

        $.ajax({
            type: "POST",
            url: "/Item/Create",
            data: { Name: name },
            dataType: 'json',
            success: function (data) {
                alert(data.Data);
                if (data.Status) {
                    window.location.replace("/Item/");
                }
            }
        });
    });
</script>